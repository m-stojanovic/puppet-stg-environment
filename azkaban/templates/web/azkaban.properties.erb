# azkaban Personalization Settings
azkaban.name=<%= scope['azkaban::instancename'] %>
azkaban.label=<%= scope['azkaban::instancelabel'] %>
azkaban.color=#FF3601
azkaban.default.servlet.path=/index
web.resource.dir=/opt/azkaban-web-server/web/
default.timezone.id=<%= scope['azkaban::timezone'] %>

# Azkaban UserManager class
user.manager.class=azkaban.user.XmlUserManager
user.manager.xml.file=/opt/azkaban-web-server/conf/azkaban-users.xml

# Loader for projects
executor.global.properties=/opt/azkaban-web-server/conf/global.properties
azkaban.project.dir=projects

# plugins
azkaban.jobtype.plugin.dir=/opt/azkaban-web-server/plugins

# Velocity dev mode
velocity.dev.mode=false

# Azkaban Jetty server properties.
jetty.use.ssl=false
jetty.maxThreads=25
jetty.port=<%= scope['azkaban::http_port'] %>
jetty.keystore=keystore
jetty.password=password
jetty.keypassword=password
jetty.truststore=keystore
jetty.trustpassword=password
jetty.use.ssl=false

# Azkaban Executor settings
# mail settings
executor.port=<%= scope['azkaban::executor_port'] %>
mail.sender=<%= scope['azkaban::mail_sender'] %>
mail.host=<%= scope['azkaban::mail_host'] %>
job.failure.email=<%= scope['azkaban::job_failure_email'] %>
job.success.email=<%= scope['azkaban::job_success_email'] %>
azkaban.use.multiple.executors=true

# JMX stats
jetty.connector.stats=true
executor.connector.stats=true

# Azkaban mysql settings by default. Users should configure their own username and password.
database.type=mysql
mysql.port=<%= scope['azkaban::mysql_port'] %>
mysql.host=<%= scope['azkaban::mysql_host'] %>
mysql.database=<%= scope['azkaban::mysql_database'] %>
mysql.user=<%= scope['azkaban::mysql_user'] %>
mysql.password=<%= scope['azkaban::mysql_password'] %>
mysql.numconnections=100

