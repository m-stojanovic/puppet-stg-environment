repository {
  logging {
    log_to_file = false
    log_to_console = true
    log_path = "logs/"
    default_log_level = "<%= @log_level %>"
  }
  schemaRepository {
    service {
      enabled = <%= @enabled %>
      port = <%= @service_port %>
      scheme = "<%= scope['datastore::zk_scheme'] %>"
      quorum  = "<%= scope['datastore::hd_zookeeper_quorum'] %>"
      announcepath = "<%= @announce_path %>"
      shard = <%= @shard %>
      announcetimeout = <%= @announce_timeout %>
      protocol = "<%= @protocol %>"
    }
    storage = "<%= @storage %>"
    storageZkQuorum = "<%= scope['datastore::hd_zookeeper_quorum'] %>"
    caching = "<%= @caching %>"
  }
}
