relatedDataReadApp {
  logging {
        log_to_file = false
        log_to_console = true
        log_path = "logs/"
        default_log_level = "<%= @log_level %>"
          }
  relatedDataRead {
        service {
                enabled = "<%= @enabled %>"
                port = <%= @service_port %>
                protocol = "<%= @protocol %>"
                scheme = "<%= scope['datastore::zk_scheme'] %>"
                quorums = ["<%= scope['datastore::api_zookeeper_quorum'] %>"]
                announcepath = "<%= @announce_path %>"
                shard = <%= @shard %>
                announcetimeout = <%= @announce_timeout %>
                }
        relatedDataReadDao = "hbase"
        relatedDataReadCaching = false
        returnStrings = true
        fasttable = "<%= @hbase_fast_table %>"
        hbaseclient {
            quorum = "<%= scope['datastore::hd_zookeeper_list'] %>"
            zkclientport = "<%= scope['datastore::hd_zookeeper_clientport'] %>"
            znodeparent = "<%= @hbase_znode %>"
            rpcTimeout = <%= @hbaseclient_rpc_timeout %>
            scannerTimeout = <%= @hbaseclient_scanner_timeout %>
	   }
    }
}
